<mvc:View xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="br.com.idxtecServicoArmazem.controller.GravarServico"
	xmlns:html="http://www.w3.org/1999/xhtml"
	height="100%"
	width="100%"
	xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Serviço Armazém">
							<f:SimpleForm id="formServico"
								editable="true"
								layout="ResponsiveGridLayout"
								labelSpanXL="4"
								labelSpanL="4"
								labelSpanM="4"
								labelSpanS="12"
								adjustLabelSpan="false"
								emptySpanXL="0"
								emptySpanL="0"
								emptySpanM="0"
								emptySpanS="0"
								columnsXL="3"
								columnsL="2"
								columnsM="2"
								singleContainerFullSize="false">
								<f:content>
									<core:Title text="{view>/titulo}"/>
									<Label text="Código" labelFor="codigo"/>
									<Input id="codigo" value="{model>/Codigo}" required="true" editable="{view>/codigoEdit}"/>
									
									<Label text="Descrição" labelFor="descricao"/>
									<Input id="descricao" value="{model>/Descricao}" required="true"/>
									
									<Label text="Produto" labelFor="produto"/>
									<Input selectedKey="{path: 'model>/Produto', type: 'sap.ui.model.odata.type.Int32'}"
										textFormatMode="KeyValue"
										showSuggestion="true"
										showValueHelp="true"
										valueHelpRequest="handleSearchProduto"
										suggestionItems="{
											path: '/Produtos',
											events: {
												dataReceived: '.produtoReceived'
											}}"
										id="produto"
										required="true">
										<suggestionItems>
											<core:ListItem key="{Id}" text="{Descricao}"/>
										</suggestionItems>
									</Input>
									
									<Label text="Ativo" labelFor="ativo"/>
									<CheckBox id="ativo" selected="{model>/Ativo}"/>
								</f:content>
							</f:SimpleForm>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://save" id="salvar" text="Salvar" press="onSalvar"/>
						<Button icon="sap-icon://reset" id="voltar" text="Cancelar" press="onVoltar"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>